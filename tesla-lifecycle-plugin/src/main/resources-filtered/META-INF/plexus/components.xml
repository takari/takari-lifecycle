<?xml version="1.0" encoding="UTF-8"?>
<component-set>
  <components>
    <!-- Artifact Handlers for Tesla -->    
    <!--
     | TESLA JAR
     |-->
    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>tesla-jar</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <type>tesla-jar</type>
        <extension>jar</extension>
        <language>java</language>
        <addedToClasspath>true</addedToClasspath>
      </configuration>
    </component>
    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>tesla-jar</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <!-- START SNIPPET: tesla-jar-lifecycle -->
            <phases>
              <process-resources>
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:process-resources
              </process-resources>
              <compile>
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:compile
              </compile>
              <process-test-resources>
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:process-test-resources
              </process-test-resources>
              <test-compile>
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:testCompile
              </test-compile>
              <test>
                org.apache.maven.plugins:maven-surefire-plugin:2.12.1:test
              </test>
              <package>
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:jar
              </package>
              <install>
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:install
              </install>
              <deploy>
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:deploy
              </deploy>
            </phases>
            <!-- END SNIPPET: tesla-jar-lifecycle -->
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>        
    
    <!-- Maven JAR lifecycle with only the JAR plugin changed -->
    <component>                                                                                                                                                    
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>                                                                                             
      <role-hint>tesla-jar-00</role-hint>                                                                                                                                   
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>                                                                  
      <configuration>                                                                                                                                              
        <lifecycles>                                                                                                                                               
          <lifecycle>                                                                                                                                              
            <id>default</id>                                                                                                                                                                                                                                                                                                          
            <phases>                                                                                                                                               
              <process-resources>                                                                                                                                  
                org.apache.maven.plugins:maven-resources-plugin:2.6:resources                                                                                      
              </process-resources>                                                                                                                                 
              <compile>                                                                                                                                            
                org.apache.maven.plugins:maven-jar-plugin:2.4:jar                                                                                       
              </compile>                                                                                                                                           
              <process-test-resources>                                                                                                                             
                org.apache.maven.plugins:maven-resources-plugin:2.6:testResources                                                                                  
              </process-test-resources>                                                                                                                            
              <test-compile>                                                                                                                                       
                org.apache.maven.plugins:maven-compiler-plugin:2.5.1:testCompile                                                                                   
              </test-compile>                                                                                                                                      
              <test>                                                                                                                                               
                org.apache.maven.plugins:maven-surefire-plugin:2.12.4:test                                                                                         
              </test>                                                                                                                                              
              <package>                                                                                                                                            
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:jar                                                                                                  
              </package>                                                                                                                                           
              <install>                                                                                                                                            
                org.apache.maven.plugins:maven-install-plugin:2.4:install                                                                                          
              </install>                                                                                                                                           
              <deploy>                                                                                                                                             
                org.apache.maven.plugins:maven-deploy-plugin:2.7:deploy                                                                                            
              </deploy>                                                                                                                                            
            </phases>                                                                                                                                                                                                                                                                                                                 
          </lifecycle>                                                                                                                                             
        </lifecycles>                                                                                                                                              
      </configuration>                                                                                                                                             
    </component>          
    
    <!-- Maven JAR lifecycle with only the JAR and compiler plugin changed -->
    <component>                                                                                                                                                    
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>                                                                                             
      <role-hint>tesla-jar-01</role-hint>                                                                                                                                   
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>                                                                  
      <configuration>                                                                                                                                              
        <lifecycles>                                                                                                                                               
          <lifecycle>                                                                                                                                              
            <id>default</id>                                                                                                                                                                                                                                                                                                          
            <phases>                                                                                                                                               
              <process-resources>                                                                                                                                  
                org.apache.maven.plugins:maven-resources-plugin:2.6:resources                                                                                      
              </process-resources>                                                                                                                                 
              <compile>                                                                                                                                            
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:compile                                                                                       
              </compile>                                                                                                                                           
              <process-test-resources>                                                                                                                             
                org.apache.maven.plugins:maven-resources-plugin:2.6:testResources                                                                                  
              </process-test-resources>                                                                                                                            
              <test-compile>                                                                                                                                       
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:testCompile                                                                                   
              </test-compile>                                                                                                                                      
              <test>                                                                                                                                               
                org.apache.maven.plugins:maven-surefire-plugin:2.12.4:test                                                                                         
              </test>                                                                                                                                              
              <package>                                                                                                                                            
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:jar                                                                                                  
              </package>                                                                                                                                           
              <install>                                                                                                                                            
                org.apache.maven.plugins:maven-install-plugin:2.4:install                                                                                          
              </install>                                                                                                                                           
              <deploy>                                                                                                                                             
                org.apache.maven.plugins:maven-deploy-plugin:2.7:deploy                                                                                            
              </deploy>                                                                                                                                            
            </phases>                                                                                                                                                                                                                                                                                                                 
          </lifecycle>                                                                                                                                             
        </lifecycles>                                                                                                                                              
      </configuration>                                                                                                                                             
    </component>                       
    
    <!--
     | TESLA PLUGIN
     |-->
    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>tesla-plugin</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <type>tesla-plugin</type>
        <extension>jar</extension>
        <language>java</language>
        <addedToClasspath>true</addedToClasspath>
      </configuration>
    </component>
    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>tesla-plugin</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <!-- START SNIPPET: tesla-plugin-lifecycle -->
            <phases>
              <process-resources>
                org.apache.maven.plugins:maven-resources-plugin:2.5:resources
              </process-resources>
              <compile>
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:compile
              </compile>
              <process-classes>
                io.tesla.maven.plugins:tesla-plugin-plugin:${version.tesla-plugin-api}:descriptor,
                org.sonatype.plugins:sisu-maven-plugin:1.1:main-index
              </process-classes>
              <process-test-resources>
                org.apache.maven.plugins:maven-resources-plugin:2.5:testResources
              </process-test-resources>
              <test-compile>
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:testCompile
              </test-compile>
              <process-test-classes>
                org.sonatype.plugins:sisu-maven-plugin:1.1:test-index
              </process-test-classes>
              <test>
                org.apache.maven.plugins:maven-surefire-plugin:2.12.1:test
              </test>
              <package>
                io.tesla.maven.plugins:tesla-lifecycle-plugin:${project.version}:jar,
                org.apache.maven.plugins:maven-plugin-plugin:2.7:addPluginArtifactMetadata
              </package>
              <install>
                org.apache.maven.plugins:maven-install-plugin:2.3.1:install
              </install>
              <deploy>
                org.apache.maven.plugins:maven-deploy-plugin:2.7:deploy
              </deploy>
            </phases>
            <!-- END SNIPPET: tesla-plugin-lifecycle -->
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>  
    
    <!-- Our compiler bits -->
    <component>
      <role>org.codehaus.plexus.compiler.manager.CompilerManager</role>
      <role-hint>default</role-hint>
      <implementation>org.codehaus.plexus.compiler.manager.DefaultCompilerManager</implementation>
      <description />
      <isolated-realm>false</isolated-realm>
      <requirements>
        <requirement>
          <role>org.codehaus.plexus.compiler.Compiler</role>
          <field-name>compilers</field-name>
        </requirement>
      </requirements>
    </component>    
    <component>
      <role>org.codehaus.plexus.compiler.Compiler</role>
      <role-hint>javac</role-hint>
      <implementation>org.codehaus.plexus.compiler.javac.JavacCompiler</implementation>
      <description />
      <isolated-realm>false</isolated-realm>
    </component>    
       
  </components>
</component-set>
