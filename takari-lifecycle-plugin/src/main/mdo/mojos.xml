<?xml version="1.0"?>

<model xmlns="http://modello.codehaus.org/MODELLO/1.4.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://modello.codehaus.org/MODELLO/1.4.1 http://modello.codehaus.org/xsd/modello-1.4.1.xsd">

  <id>maven-plugin-descriptor</id>
  <name>PluginDescriptor</name>

  <defaults>
    <default>
      <key>package</key>
      <value>io.takari.maven.plugins.plugin.model</value>
    </default>
  </defaults>

  <classes>
    <class rootElement="true" xml.tagName="mojos">
      <name>PluginDescriptor</name>
      <fields>
        <field xml.transient="true">
          <name>groupId</name>
          <type>String</type>
        </field>
        <field xml.transient="true">
          <name>artifactId</name>
          <type>String</type>
        </field>
        <field xml.transient="true">
          <name>version</name>
          <type>String</type>
        </field>
        <field xml.transient="true">
          <name>goalPrefix</name>
          <type>String</type>
        </field>

        <field xml.transient="true">
          <name>name</name>
          <type>String</type>
        </field>
        <field xml.transient="true">
          <name>description</name>
          <type>String</type>
        </field>


        <field xml.transient="true">
          <name>isolatedRealm</name>
          <type>boolean</type>
        </field>
        <field xml.transient="true">
          <name>inheritedByDefault</name>
          <type>boolean</type>
        </field>

        <field xml.transient="true">
          <name>dependencies</name>
          <association>
            <type>PluginDependency</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>mojos</name>
          <association xml.itemsStyle="flat">
            <type>MojoDescriptor</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
      </fields>
    </class>

    <class >
      <name>PluginDependency</name>
      <fields>
        <field>
          <name>groupId</name>
          <type>String</type>
        </field>
        <field>
          <name>artifactId</name>
          <type>String</type>
        </field>
        <field>
          <name>version</name>
          <type>String</type>
        </field>
        <field>
          <name>type</name>
          <type>String</type>
        </field>
        <!-- TODO classifier? -->
      </fields>
    </class>


    <class java.clone="deep">
      <name>MojoDescriptor</name>
      <fields>
        <field>
          <name>superclasses</name>
          <association>
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>goal</name>
          <type>String</type>
        </field>
        <field>
          <name>description</name>
          <type>String</type>
        </field>
        <field>
          <name>since</name>
          <type>String</type>
        </field>
        <field>
          <name>requiresDependencyResolution</name>
          <type>String</type>
        </field>
        <field>
          <name>requiresDependencyCollection</name>
          <type>String</type>
        </field>
        <field>
          <name>requiresDirectInvocation</name>
          <type>boolean</type>
        </field>
        <field>
          <name>requiresProject</name>
          <type>boolean</type>
        </field>
        <field>
          <name>requiresReports</name>
          <type>boolean</type>
        </field>
        <field>
          <name>aggregator</name>
          <type>boolean</type>
        </field>
        <field>
          <name>requiresOnline</name>
          <type>boolean</type>
        </field>
        <field>
          <name>inheritedByDefault</name>
          <type>boolean</type>
        </field>
        <field>
          <name>phase</name>
          <type>String</type>
        </field>
        <field>
          <name>implementation</name>
          <type>String</type>
        </field>
        <field>
          <name>language</name>
          <type>String</type>
        </field>
        <field>
          <name>configurator</name>
          <type>String</type>
        </field>
        <field>
          <name>instantiationStrategy</name>
          <type>String</type>
        </field>
        <field>
          <name>executionStrategy</name>
          <type>String</type>
        </field>
        <field>
          <name>threadSafe</name>
          <type>boolean</type>
        </field>
        <field>
          <name>deprecated</name>
          <type>String</type>
        </field>
        <field>
          <name>parameters</name>
          <association>
            <type>MojoParameter</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>requirements</name>
          <association>
            <type>MojoRequirement</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>takariBuilder</name>
          <type>boolean</type>
        </field>
      </fields>
    </class>

    <class java.clone="deep">
      <name>MojoParameter</name>
      <fields>
        <field>
          <name>name</name>
          <type>String</type>
        </field>
        <field>
          <name>alias</name>
          <type>String</type>
        </field>
        <field>
          <name>type</name>
          <type>String</type>
        </field>
        <field>
          <name>required</name>
          <type>boolean</type>
        </field>
        <field>
          <name>editable</name>
          <type>boolean</type>
        </field>
        <field>
          <name>description</name>
          <type>String</type>
        </field>
        <field>
          <name>deprecated</name>
          <type>String</type>
        </field>
        <field>
          <name>since</name>
          <type>String</type>
        </field>
        <field>
          <name>implementation</name>
          <type>String</type>
        </field>
        <field>
          <name>defaultValue</name>
          <type>String</type>
        </field>
        <field>
          <name>expression</name>
          <type>String</type>
        </field>
      </fields>
    </class>

    <class java.clone="deep">
      <name>MojoRequirement</name>
      <fields>
        <field>
          <name>fieldName</name>
          <type>String</type>
        </field>
        <field>
          <name>role</name>
          <type>String</type>
        </field>
        <field>
          <name>roleHint</name>
          <type>String</type>
        </field>
      </fields>
    </class>

  </classes>
</model>
